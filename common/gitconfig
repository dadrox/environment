[core]
	excludesfile = ~/.gitignore
	pager = less -+$LESS -R
[color]
	ui = auto
[color "status"]
	header = black bold
	branch = green
	nobranch = red reverse white
	added = green
	changed = yellow
	untracked = red
	deleted = red bold
[alias]
	git = !git
	st = status
	ci = commit
	co = checkout
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	pb = remote prune origin
        pbd = remote prune origin --dry-run

	amend = commit --amend
	work = !git config user.name cwood && git config user.email christopher.wood2@twcable.com
	home = !git config user.name dadrox && git config user.email cwood@gmail.com
[user]
	name = cwood
	email = christopher.wood2@twcable.com
[push]

	default = simple
